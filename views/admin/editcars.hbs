<div class="content-body">
	<div class="container-fluid">
<form class="mt-3" action="/admin/editCars/{{Car._id}}" method="post" id="editcars" enctype="multipart/form-data">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <h2 class="fw-bold mb-2 text-uppercase">EDIT CARS</h2>
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Vehiclename</label>
                    <input type="text" class="form-control" name="Name" value="{{Car.Name}}">
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Brand</label>
                    <input type="text" class="form-control" name="Brand" value="{{Car.Brand}}">
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Fuel</label>
                    <select class="custom-select" id="inputGroupSelect01" name="Fuel">
                        <option value="Petrol">Petrol</option>
                        <option value="Diesel">Diesel</option>
                    </select>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Type</label>
                    <select class="custom-select" id="inputGroupSelect01" name="Type">
                        <option value="SUV">SUV</option>
                        <option value="HATCHBACK">HATCHBACK</option>
                        <option value="SEDAN">SEDAN</option>
                    </select>
                </div>
            </div>


            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Transmission</label>
                    <select class="custom-select" id="inputGroupSelect01" name="Transmission">
                        <option value="Automatic">Automatic</option>
                        <option value="Manual">Manual</option>
                    </select>
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">seats</label>
                    <select class="custom-select" id="inputGroupSelect01" name="Seats">
                        <option value="5">5 seater</option>
                        <option value="7">7 seater</option>
                        <option value="8">8 seater</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Car number</label>
                    <input type="text" class="form-control" name="Carnumber" value="{{Car.Carnumber}}">
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">mileage</label>
                    <input type="number" class="form-control" name="Mileage" value="{{Car.Mileage}}">
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Price/hour</label>
                    <input type="text" class="form-control" name="Price" value="{{Car.Price}}">
                </div>
                <div class="col-12 col-lg-6">
                    <label class="form-label mt-2">Location</label>
                    <select class="custom-select" id="inputGroupSelect01" name="location">
                        <option value="malappuram">malappuram</option>
                        <option value="calicut">calicut</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col form-group mt-2">
                    <div>
                        <label for="exampleFormControlFile1">image1</label>
                    </div>
                    <div>
                        <img src="/carimages/{{Car._id}}1.jpg" alt="" style="width: 100px; height: 80px;" id="imageView1">
                        <input type="file" class="form-control-file mt-3" id="exampleFormControlFile1" name="carImage1" onchange="viewImage1(event)">
                    </div>
                </div>
                <div class="col form-group mt-2">
                    <div>
                        <label for="exampleFormControlFile1">image2</label>
                    </div>
                    <div>
                        <img src="/carimages/{{Car._id}}2.jpg" alt="" style="width: 100px; height: 80px;" id="imageView2">
                        <input type="file" class="form-control-file mt-3" id="exampleFormControlFile1" name="carImage2" onchange="viewImage2(event)">
                    </div>
                </div>
                <div class="col form-group mt-2">
                    <div>
                        <label for="exampleFormControlFile1">image3</label>
                    </div>
                    <div>
                        <img src="/carimages/{{Car._id}}3.jpg" alt="" style="width: 100px; height: 80px;" id="imageView3">
                        <input type="file" class="form-control-file mt-3" id="exampleFormControlFile1" name="carImage3" onchange="viewImage3(event)">
                    </div>
                </div>
            </div>
            <div class="mt-2 ml-4">
                <button class="btn btn-outline-dark btn-lg px-5 " type="submit">Edit</button>
            </div>

        </div>
    </div>
</form>
</div>
</div>


<script>
    function viewImage1(event){
        document.getElementById('imageView1').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage2(event){
        document.getElementById('imageView2').src=URL.createObjectURL(event.target.files[0])
    }
    function viewImage3(event){
        document.getElementById('imageView3').src=URL.createObjectURL(event.target.files[0])
    }
</script>
<script src="/javascripts/editcars.js"></script>