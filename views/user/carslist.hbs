    if(day < 10)
        day = '0' + day.toString();
    
    var maxDate = year + '-' + month + '-' + day;
     {{!-- alert(maxDate);  --}}
    $('#pick_date').attr('min', maxDate);
    document.getElementById('drop_date').removeAttribute("disabled")
    document.getElementById('pickuptime').removeAttribute("disabled")
  
};

